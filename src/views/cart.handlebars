<h1>Carrinho de Compras</h1>

{{#if cart.products.length}}
    <table>
        <thead>
            <tr>
                <th>Produto</th>
                <th>Preço</th>
                <th>Quantidade</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            {{#each cart.products}}
                <tr>
                    <td>{{this.product.title}}</td>
                    <td>R$ {{this.product.price}}</td>
                    <td>{{this.quantity}}</td>
                    <td>R$ {{multiply this.quantity this.product.price}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>

    <h3>Total: R$ {{calculateTotal cart.products}}</h3>
{{else}}
        <p>O carrinho está vazio.</p>
    {{/if}}

<a href="/products">Voltar para produtos</a>